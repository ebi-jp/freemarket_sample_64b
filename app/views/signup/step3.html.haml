.wrapper-member-info
  .personal-entry
    .signup-page-header
      %header.personal-entry__header
        = link_to image_tag('logo_red.svg',{class: "mercarilogo"})
        .progress
          .progress__upper
            .progress_upper_title__long 会員情報
            .progress_upper_title__short 電話番号認証
            .progress_upper_title__red お届け先住所入力
            .progress_upper_title__longer 支払い方法
            .progress_upper_title 完了
          .progress__lower
            .progress_lower_circle__red
            .progress_lower_bar__red
            .progress_lower_circle__red
            .progress_lower_bar__red
            .progress_lower_circle__red
            .progress_lower_bar
            .progress_lower_circle
            .progress_lower_bar
            .progress_lower_circle
  .info-main
    .info-content
      %h2.info-content__head 住所入力
      = form_for @user, url: signup_index_path, method: :post, html: {class: 'forth-main-wrapper__box'} do |f|
        =f.fields_for :address do |a|
          .field.main-content2
            .form-group
              %label{for:"postal_code"} 郵便番号
              %span.form-require 必須
              .field-input
                = a.text_field :postal_code, placeholder: "例) 123-4567", type: "text", class: "input-default",required:"required"
            .form-group
              %label{for: "prefecture_id"} 都道府県
              %span.form-require 必須
              .field-input
                = a.collection_select :prefecture_id, Prefecture.all, :id, :name, {prompt: "--"}, {class: 'select-default-address'}
            .form-group
              %label{for:"city"} 市区町村
              %span.form-require 必須
              .field-input
                = a.text_field :city, placeholder: "例) 横浜市緑区", type: "text", class: "login-input-text",required:"required"
            .form-group
              %label{for:"address"} 番地
              %span.form-require 必須
              .field-input
                = a.text_field :address, placeholder: "例) 青山1-1-1", type: "text", class: "login-input-text",required:"required"
            
            .form-group
              %label{for:"building"} 建物名
              %span.form-require-sub 任意
              .field-input
                = a.text_field :building, placeholder: "例) 柳ビル103", type: "text", class: "login-input-text"
            .form-group
              %label{for:"phone_number"} 電話番号
              %span.form-require-sub 任意
              .field-input
                = a.text_field :phone_number, placeholder: "例) 09012345678", type: "text", class: "login-input-text"

            .form-group
            .actions
              = f.submit "次へ進む", class: "btn-red"  
            .links
              = link_to "本人情報の登録について＞", class: "user-link"


.wrapper-member-info
  .personal-entry
    .signup-page-header
      %header.personal-entry__header
        = link_to root_path do
          = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1204800476", class: "mercarilogo"
      %nav.progress-bar
        %ol.clearfix
          %li.active
            会員情報
            .progress-status
          %li.active
            電話番号認証 
            .progress-status
          %li.active
            お届け先住所入力
            .progress-status
          %li
            支払い方法
            .progress-status
          %li
            完了
            .progress-status
  .info-main
    .info-content
      %h2.info-content__head 住所入力
      = form_for @user, url: step4_signup_index_path, method: :get, html: {class: 'first-main__box'} do |f|
        .field.main-content2
          .form-group
            %label{for:"postal_code"} 郵便番号
            %span.form-require 必須
            .field-input
              = f.postal_field :postal_code, placeholder: "例) 123-4567", type: "text", class: "input-default",required:"required"
          -# .form-group
          -#   %label{for: "email"} メールアドレス
          -#   %span.form-require 必須
          -#   .field-input
          -#     = f.email_field :email, placeholder: "PC・携帯どちらでも可", type: "email", class: "login-input-text",required:"required"
          .form-group
            %label{for:"city"} 市区町村
            %span.form-require 必須
            .field-input
              = f.city_field :city, placeholder: "例) 横浜市緑区", type: "text", class: "login-input-text",required:"required"
          .form-group
            %label{for:"address"} 番地
            %span.form-require 必須
            .field-input
              = f.address_field :address, placeholder: "例) 青山1-1-1", type: "text", class: "login-input-text",required:"required"
          
          .form-group
            %label{for:"building"} 建物名
            %span.form-require 任意
            .field-input
              = f.building_field :building, placeholder: "例) 柳ビル103", type: "text", class: "login-input-text",required:"required"
          .form-group
            %label{for:"phone_number"} 電話番号
            %span.form-require 任意
            .field-input
              = f.phone_field :phone_number, placeholder: "例) 09012345678", type: "text", class: "login-input-text",required:"required"

          .form-group
          .actions
            = f.submit "次へ進む", class: "btn-red"  
          .links
            = link_to "本人情報の登録について＞", class: "user-link"


.wrapper-member-info
  .personal-entry
    .signup-page-header
      %header.personal-entry__header
        = link_to root_path do
          = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1204800476", class: "mercarilogo"
      %nav.progress-bar
        %ol.clearfix
          %li.active
            会員情報
            .progress-status
          %li.active
            電話番号認証 
            .progress-status
          %li.active
            お届け先住所入力
            .progress-status
          %li
            支払い方法
            .progress-status
          %li
            完了
            .progress-status
  .info-main
    .info-content
      %h2.info-content__head 支払い方法
      = form_for @user, url: signup_index_path, method: :post, html: {class: 'forth-main-wrapper__box'} do |f|
        .field.main-content2
          .form-group
            %label{for:"card_number"} カード番号
            %span.form-require 必須
            .field-input
              = f.card_field :card_number, placeholder: "半角数字のみ", type: "text", class: "input-default",required:"required"
          
          .form-group
            %label{for:"pin_number"} セキュリティコード
            %span.form-require 必須
            .field-input
              = f.pin_field :pin_number, placeholder: "カード背面4桁もしくは3桁の番号", type: "text", class: "input-default",required:"required"
          .card_info
            = link_to "カード裏面の番号とは？"
          .actions
            = f.submit "次へ進む", class: "btn-red" 
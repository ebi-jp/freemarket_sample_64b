.container
  .header
    .header-top
      .header-top__logo
        -# = image_tag "logo_red.svg", width: "134", height: "36"
        = link_to image_tag('logo_red.svg',width: "134", height: "36"), '/'
      %form.header-top__search__form{action: ""}
        %input.header-top__search__input{name: "keyword",placeholder: "何かお探しですか？",type: "search",value: ""}
          -# %i.fas.fa-search


    .header-lists
      %ul.header-lists__left
        %li.lists-menu__categories
          .lists-menu__categories__text{href: ""}
            %i.fas.fa-list
            -# %svg.lists-menu__icon 
            カテゴリーから探す      
        %li.lists-menu__brands
          .lists-menu__brands__text{href: ""}
            %i.fas.fa-tag
            -# %svg.lists-menu__icon
            ブランドから探す
      .header_box__userbox
        %ul.header_box__userbox_user
          - if user_signed_in?
            %li
              = link_to user_path(current_user), class: "header_box__userbox_user__notice" do
                = icon "far", "bell", class: "header_box__userbox_user__notice__icon"
                %span.header_box__userbox_user__notice__text
                  お知らせ
            %li
              = link_to user_path(current_user), class: "header_box__userbox_user__todo" do
                = icon "fas", "check", class: "header_box__userbox_user__todo__icon"
                %span.header_box__userbox_user__todo__text
                  やることリスト
            %li
              = link_to mypage_user_path(current_user), class: "header_box__userbox_user__mypage" do
                -# %figure.header_box__userbox_user__mypage__icon
                -#   = image_tag("", size: "32x32")
                = icon "far", "meh-blank", class: "header_box__userbox_user__mypage__icon"
                %span.header_box__userbox_user__mypage__text
                  マイページ
          - else
            %ul.header-lists__right
              %li.lists-menu__signin
                .lists-menu__signin__btn
                  %i.icon-mail
                  = link_to "新規会員登録", new_user_path


              %li.lists-menu__signup
                .lists-menu__signup__btn
                  %i.icon-mail
                  = link_to "ログイン", new_user_session_path
